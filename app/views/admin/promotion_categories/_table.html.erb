<table class="basic-table">
  <thead>
  	<tr>
  		<th><%= t("categories") %></th>
  		<th><%= t("action") %></th>
  	</tr>
  </thead>
  <tbody>
    <% promotion_categories.each do |category| %>
      <tr id="<%= dom_id(category, :sel)%>">
        <td valign="top"><%= category.taxon.name %></td>
  	    <td valign="top">
		      <%= link_to_remote t('remove'),
		                         :url => remove_admin_my_promotion_promotion_category_url(@my_promotion, category),
		                         :loading => "Element.show(#{dom_id(category, :rem_spinner)})",
		                         :update => 'selected-suggestions',
		                         :complete => "$('#{dom_id(category, :sel)}').remove(); Element.hide(#{dom_id(category, :rem_spinner)});" %>
          <%= image_tag "spinner.gif", :style => "display:none", :id => "#{dom_id(category, :rem_spinner)}" %>
  	    </td>
      </tr>
    <% end %>
    <% if promotion_categories.empty? %>
     <tr><td colspan="3"><%= t('none') %>.</td></tr>
    <% end %>
  </tbody>
</table>
